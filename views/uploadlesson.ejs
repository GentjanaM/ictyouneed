<% include partials/header %>


<div class="container jumbotron" style="margin-left:20%; width:60%; margin-right:20%; margin-top: 8%;">
    <h2 class="text-center"> Upload a new Lesson</h2>
    <div class="form-horizontal" style="margin-top: 50px ">

        <div class="form-group">
            <label class="control-label col-sm-2" for="title">Title:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="title" placeholder="Enter title" name="title">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="keywords">Keywords:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="keyword" placeholder="Enter keywords" name="keywords"><br/>
                <textarea class="form-control" rows="5" id="comment" placeholder="Definition"></textarea><br/>
                <button style=" float: right;" type="submit" id="submitbtn" class="btn btn-default">Add new item
                </button>

            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="introduction">Introduction</label>
            <div class="col-sm-10">
                <textarea class="form-control" rows="4" id="comment" placeholder="Introduction"></textarea><br/>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="image">Content</label>
            <div class="col-sm-10">
                <div id="summernote"><p>Write the body of your lesson</p></div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="recap">Recap:</label>
            <div class="col-sm-10">
                <textarea class="form-control" rows="5" id="comment"></textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-danger" type="submit" name="cancel" id="cancelbtn" value="Cancel">Cancel</button>
                <button style="margin-left: 30px" type="submit" id="submitbtn" class="btn btn-info">Save</button>
            </div>
        </div>
    </div>
</div>

<% include partials/footer %>

<script>
    $(document).ready(function() {
        $('#summernote').summernote({
            height: 200,
            width: 800,
            minHeight: null,
            maxHeight: null,
            focus: true
        });
    });
</script>